<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Custom Styles -->
    <style name="CurrencyItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">7dp</item>
    </style>

    <style name="CurrencyLabel" parent="CurrencyItem">
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="CurrencyText" parent="CurrencyItem">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="CurrencyLabelText" parent="CurrencyLabel">
        <item name="android:textSize">35sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#555</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ConvertButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">5dp</item>

        <item name="android:textAllCaps">false</item>
    </style>

</resources>
